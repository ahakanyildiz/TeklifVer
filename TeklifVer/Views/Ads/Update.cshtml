@using TeklifVer.UI.Models.Car;
@model AdvertisingUpdateViewModel


<script src="~/js/Car/CarUpdate.js"></script>

<form method="post" asp-action="Update" asp-controller="Ads">
    <input type="hidden" asp-for="@Model.Car.MemberId" />
    <div class="form-group">
        <label>Başlık:</label>
        <input asp-for="@Model.Car.Definition" id="Definition" type="text" value="@Model.Car.Definition" />
    </div>
    <div class="form-group">
        <label>Açıklama:</label>
        <input asp-for="@Model.Car.Description" type="text"  />
    </div>
    <input type="hidden" asp-for="@Model.Car.Id" />
    <div class="form-group">
        <label>Marka Seçiniz:</label>
        <select name="BrandId" id="carBrandSelect">
            @foreach (var brand in Model.Brands)
            {
                @if (brand.Id == Model.Car.Model.BrandId)
                {
                    <option value="@brand.Id" selected="true">@brand.Definition</option>
                }
                else
                {
                    <option value="@brand.Id">@brand.Definition</option>
                }
            }
        </select>
    </div>

    <div class="form-group">
        <label>Model Seçiniz:</label>
        <select asp-for="@Model.Car.ModelId" id="carModelSelect">
            @foreach (var carModel in Model.Models)
            {
                @if (carModel.Id == Model.Car.ModelId)
                {
                    <option value="@carModel.Id" selected>@carModel.Definition</option>
                }
                else
                {
                    <option value="@carModel.Id">@carModel.Definition</option>
                }
            }
        </select>
    </div>

    <div class="form-group">
        <label>Sene:</label>
        <input asp-for="@Model.Car.Year" type="number" id="Year" min="1900" max="@DateTime.Now.Year" step="1" placeholder="YYYY" value="@Model.Car.Year">
    </div>
    <div class="form-group">
        <label>Fiyat:</label>
        <input asp-for="@Model.Car.Price" type="number" asp-for="@Model.Car.Price">
    </div>

    <button class="button success" id="btnUpdate" type="submit">Güncelle</button>
</form>

