@using Entities;
@using TeklifVer.UI.Models.CarModel;
@model ModelListModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/js/Model/CarModel.js"></script>

<table id="carModelTable" class="display">
    <thead>
        <tr>
            <th>Marka</th>
            <th>Model</th>
            <th>Remove</th>
            <th>Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CarModels)
        {
            <tr>
                <td>@item.Brand.Definition</td>
                <td>@item.Definition</td>
                <td><a class="button danger" asp-action="Remove" asp-controller="Model" asp-route-id="@item.Id">Remove</a></td>
                <td><a class="button warning" asp-action="Update" asp-controller="Model" asp-route-id="@item.Id">Update</a></td>
            </tr>
        }
    </tbody>
</table>

<button class="button primary trigger">Create Model</button>

<div class="modal-wrapper">
    <div class="modal">
        <div class="head">
            <p>MODEL OLUŞTUR</p>
            <a class="btn-close trigger" href="javascript:;"></a>
        </div>
        <div class="content">
            <form method="post" asp-action="Create" asp-controller="Model" id="carModelForm">
                <div class="form-group">
                    <label>Model Ad:</label>
                    <input asp-for="@Model.Definition" id="definition" type="text" />
                </div>
                <div class="form-group">
                    <label>Marka:</label>
                    <select asp-for="@Model.BrandId" id="brandSelect" class="js-example-basic-single">
                        @foreach (var brand in Model.Brands)
                        {
                            <option value="@brand.Id">@brand.Definition</option>
                        }
                    </select>
                </div>
                <button class="button success" id="btnCreate" type="submit">Oluştur</button>
            </form>
        </div>
    </div>
</div>