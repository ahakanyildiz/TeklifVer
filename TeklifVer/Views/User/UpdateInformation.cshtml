@using TeklifVer.Dto.Member;
@model MemberUpdateDto
@{
    ViewData["Title"] = "UpdateInformation";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div style="width:50%;">
    <form method="post" asp-action="UpdateInformation" asp-controller="User">
        <input type="hidden" asp-for="@Model.Id" />
        <div class="row">
            <div class="form-group col-6">
                <label>İsim:</label>
                <input value="@Model.Name" name="Name" class="form-control" />
            </div>
            <div class="form-group col-6">
                <label>Soyisim:</label>
                <input value="@Model.Surname" name="Surname" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="form-group col-6">
                <label>Telefon No:</label>
                <input type="text" name="PhoneNumber" value="@Model.PhoneNumber" class="form-control" />
            </div>
            <div class="form-group col-6">
                <label>Email:</label>
                <input type="email" name="Email" value="@Model.Email" class="form-control" placeholder="example@teklif.com" />
            </div>
        </div>
        <button type="submit" class="transparent-button" style="background-color:#34833a; width:auto;">Güncelle</button>
    </form>
</div>
