@using TeklifVer.Dto.CarBrand;
@model IEnumerable<CarBrandListDto>
@{
    ViewData["Title"] = "Index";
}

<script src="~/js/CarBrand/CarBrandCreate.js"></script>
<h1>@ViewBag.isSuccess</h1>

<div class="modal-wrapper">
    <div class="modal">
        <div class="head">
            <div class="modalHeadTitle">
                <p>MARKA OLUŞTUR</p>
            </div>
            <a class="btn-close trigger" href="javascript:;"></a>
        </div>
        <div class="content">
            <form method="post" asp-action="CreateBrand" asp-controller="CarBrand" id="brandForm"  enctype="multipart/form-data">
                <div class="form-group">
                    <label>Marka Ad:</label>
                    <input name="Definition" id="Definition" type="text" />
                </div>
                <div class="form-group">
                    <label>Logo:</label>
                    <input name="Image" id="Image" type="file" class="form-group" />
                </div>
                <button class="button success" id="btnCreate" type="submit">Oluştur</button>
            </form>
        </div>
    </div>
</div>


<table id="brandTable" class="display">
    <thead>
        <tr>
            <th></th>
            <th>Marka Ad</th>
            <th>Remove</th>
            <th>Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="@item.ImgName"  style="width:60px;"></td>
                <td>@item.Definition</td>
                <td><a class="button danger" asp-action="Remove" asp-controller="CarBrand" asp-route-id="@item.Id">Remove</a></td>
                <td><a class="button warning" asp-action="Update" asp-controller="CarBrand" asp-route-id="@item.Id">Update</a></td>
            </tr>
        }
    </tbody>
</table>


<button class="button primary trigger">Create Brand</button>

<div id="partialContainer"></div>




