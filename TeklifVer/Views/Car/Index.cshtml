@using TeklifVer.Dto.Car;
@using TeklifVer.UI.Models.Car;
@model List<CarListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="~/js/Car/Car.js"></script>


<div class="modal-wrapper">
    <div class="modal" style="min-height: 550px;">
        <div class="head">
            <p>ARABA KAYDI OLUŞTUR</p>
            <a class="btn-close trigger" href="javascript:;"></a>
        </div>
        <div class="content">
            <form id="brandForm" method="post" asp-action="Create" asp-controller="Car">
                <div class="form-group">
                    <label>Başlık:</label>
                    <input placeholder="Başlık giriniz" name="definition" id="Definition" type="text" />
                </div>
                <div class="form-group">
                    <label>Marka Seçiniz:</label>
                    <select name="BrandId" id="carBrandSelect"> </select>
                </div>

                <div class="form-group">
                    <label>Model Seçiniz:</label>
                    <select name="ModelId" id="carModelSelect"> </select>
                </div>
                <div class="form-group">
                    <label>Sene:</label>
                    <input type="number" id="Year" name="Year" min="1900" max="@DateTime.Now.Year" step="1" placeholder="YYYY">
                </div>

                <div class="form-group">
                    <label>Fiyat:</label>
                    <input placeholder="Fiyat bilgisi giriniz:" type="number" id="Price" name="Price">
                </div>
                <button class="button success" id="btnCreate" type="submit">Oluştur</button>
            </form>
        </div>
    </div>
</div>




<table id="carTable" class="display">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Marka</th>
            <th>Model</th>
            <th>Yıl</th>
@*            <th>Fiyat</th>*@
            <th>Remove</th>
            <th>Update</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Definition</td>
@*                    <td>@item.Model.Brand.Definition</td>*@
                    <td>@item.Model.Definition</td>
                    <td>@item.Year</td>
                    <td>@item.Price</td>
                    <td><a class="button danger" asp-action="Remove" asp-controller="Car" asp-route-id="@item.Id">Remove</a></td>
                    <td><a class="button warning" asp-action="Update" asp-controller="Car" asp-route-id="@item.Id">Update</a></td>
                </tr>
            }
        }
    </tbody>
</table>
<button class="button primary trigger">Create Car</button>


